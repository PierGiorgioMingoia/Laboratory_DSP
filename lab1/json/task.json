{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "definitions": {
        "project_name": {
            "type": "string",
            "enum": [
                "Personal",
                "WA1_Project",
                "WA2_Project",
                "DSP_Project"
            ]
        }
    },
    "properties": {
        "id": {
            "type": "integer"
        },
        "description": {
            "type": "string"
        },
        "important": {
            "type": "boolean",
            "default": false
        },
        "private": {
            "type": "boolean",
            "default": true
        },
        "projects": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/project_name"
            }
        },
        "date": {
            "type": "string",
            "minDate": "2019-01-01",
            "format": "date"
        },
        "completed": {
            "type": "boolean",
            "default": false
        },
        "assignedTo": {
            "type": "array",
            "user_id": {
                "type": "integer"
            }
        }
    },
    "required": [
        "id",
        "description"
    ]
}